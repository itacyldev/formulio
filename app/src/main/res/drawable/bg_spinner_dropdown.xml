<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="?attr/surfaceColor" />
                    <corners android:radius="5dp" />
                    <stroke
                        android:width="2dp"
                        android:color="?attr/onSurface4Color" />
                </shape>
            </item>
            <item>
                <bitmap android:tint="?attr/onAppBackgroundColor" android:gravity="center|right" android:src="@drawable/ic_action_expand"/> // you can place your dropdown image
            </item>
        </layer-list>
    </item>

</selector>

