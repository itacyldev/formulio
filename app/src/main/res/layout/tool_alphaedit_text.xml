<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/field_layout_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/field_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:textColor="#fff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/field_layout_value"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:inputType="text"
        android:textColor="#fff"></EditText>

    <ImageView
        android:id="@+id/field_layout_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="0"
        android:background="@drawable/selectablebuttonbackground"
        android:clickable="true"
        android:contentDescription="@string/tool_buttons_x"
        android:padding="5dp"
        android:src="@drawable/ic_tool_x" />

</LinearLayout>