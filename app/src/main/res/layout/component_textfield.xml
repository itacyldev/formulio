<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        style="@style/Textfield_label" />

    <EditText
        android:id="@+id/input_view"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:inputType="text"
        style="@style/Textfield_edittext"
        android:focusable="true" />

    <ImageView
        android:id="@+id/field_layout_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selectablebuttonbackground"
        android:contentDescription="@string/tool_buttons_x"
        android:padding="5dp"
        android:src="@drawable/ic_tool_x"
        style="@style/Textfield_cancel_button" />

</LinearLayout>