<?xml version="1.0" encoding="utf-8"?>
<es.jcyl.ita.frmdrd.ui.components.datalist.DatalistWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/datalist_layout"
    style="@style/Component_background"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/datalist_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/datalist_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/datalist_layout_headers"
                style="@style/Datatable_header_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Delete" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Details" />
            </LinearLayout>

            <ListView
                android:id="@+id/datalist_view"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"

                android:padding="0dp" />
        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/datalist_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:textSize="16sp" />
</es.jcyl.ita.frmdrd.ui.components.datalist.DatalistWidget>