<?xml version="1.0" encoding="utf-8"?>
<es.jcyl.ita.frmdrd.view.widget.InputWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/label_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="?attr/onSurfaceColor"
        android:textSize="16sp" />

    <Button
        android:id="@+id/input_view"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0"
        android:clickable="true"
        android:textColor="?attr/onSurfaceColor"
        android:textSize="12sp" />

    <Button
        android:id="@+id/field_layout_today"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0"
        android:clickable="true"
        android:text="@string/today"
        android:textColor="?attr/onSurfaceColor"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/field_layout_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_weight="0"
        android:background="@drawable/selectablebuttonbackground"
        android:clickable="true"
        android:contentDescription="@string/tool_buttons_x"
        android:padding="5dp"
        android:src="@drawable/ic_tool_x" />

</es.jcyl.ita.frmdrd.view.widget.InputWidget>