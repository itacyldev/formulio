<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tool_buttons_alphaedit_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2dp" >

    <ImageView
        android:id="@+id/tool_buttons_alphaedit_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selectablebuttonbackground"
        android:clickable="true"
        android:contentDescription="@string/tool_buttons_alphaedit"
        android:padding="5dp"
        android:src="@drawable/ic_tool_alphaedit" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/tool_buttons_alphaedit_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selectablebuttonbackground"
        android:clickable="true"
        android:contentDescription="@string/tool_buttons_x"
        android:padding="5dp"
        android:src="@drawable/ic_tool_x" />

</LinearLayout>