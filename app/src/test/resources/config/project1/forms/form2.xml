<main name="Agents form" description="An example of short description" id="form2" repo="agentsRepo">
    <edit>
        <form>
            <image value="batman.jpg" width="300" height="200" />
            <autocomplete converter="integer" forceSelection="true" id="provincia" label="provincia"
                repo="provRepo" value="${entity.provmuni.substring(0,2)}">
                <options labelExpression="${entity.name}" labelFilteringProperty="name"
                    valueProperty="id" />
            </autocomplete>
            <autocomplete forceSelection="true" id="provmuni" label="municipio" repo="muniRepo"
                value="${entity.provmuni}">
                <options labelExpression="${entity.name}" labelFilteringProperty="name"
                    valueProperty="provmuni" />
                <repofilter>
                    <eq property="prov" value="${view.provincia}" mandatory="true"/>
                    <contains property="name" value="${this.value}"/>
                </repofilter>
            </autocomplete>
            <autocomplete forceSelection="true" id="contact_id" label="Agent" repo="contacts"
                value="${entity.contact_id}">
                <options
                    labelExpression="${entity.contact_id} - ${entity.first_name}, ${entity.last_name}"
                    labelFilteringProperty="last_name" valueProperty="contact_id" />
            </autocomplete>
        </form>
    </edit>
</main>
