<main name="bodegas" description="Bodegas" id="bodega" repo="bodegaRepo">
    <list id="listBodega" name="Bodegas" description="Listado bodegas">
        <datatable properties="bodega_id, razon_social, direccion" />
    </list>
    <edit id="editBodega">
        <form>
            <!--<text label="Id: " value="${entity.bodega_id}" readonly="true" render=""/>-->
            <text label="Razón Social: " value="${entity.razon_social}" validator="required"/>
            <autocomplete forceSelection="true" id="provincia" label="Provincia: " repo="provRepo" value="${entity.prov_id}">
                <options labelExpression="${entity.name}" labelFilteringProperty="name" valueProperty="id" />
            </autocomplete>
            <autocomplete forceSelection="true" id="provmuni" label="Municipio: " repo="muniRepo" value="${entity.provmuni_id}">
                <options labelExpression="${entity.name}" labelFilteringProperty="name" valueProperty="provmuni" />
                <repofilter>
                    <eq property="prov" value="${view.provincia}" mandatory="true"/>
                    <contains property="name" value="${this.value}"/>
                </repofilter>
            </autocomplete>
            <text label="Dirección: " value="${entity.direccion}"/>
            <text label="Teléfono: " value="${entity.telefono}"/>
            <text label="Email: " value="${entity.email}" validator="email"/>
            <text label="Alc. Actual: " value="${entity.alcance_actual}"/>
            <text label="Alc. Solic.: " value="${entity.alcance_solicitado}"/>
        </form>
        <actions>
            <save label="Save" route="bodega-listBodega" registerInHistory="false"/>
            <cancel label="Cancel" route="bodega-listBodega"/>
        </actions>
    </edit>
</main>
