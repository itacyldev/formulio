<main name="pruebaForm" description="Prueba form" id="miPrueba" repo="provRepo">

    <list id="listaPrueba" name="Prueba List">

        <datatable>
            <column id="column_id" headerText="Id" filtering="true" ordering="true" value="${entity.id}">
                <filter property="id" matching="contains" valueExpression="${this.column_id}"/>
                <order property="id"/>
            </column>

            <column id="column_texto_prueba" headerText="Texto" filtering="true" ordering="true" value="${entity.texto_prueba}">
                <filter property="texto_prueba" matching="contains" valueExpression="${this.column_texto_prueba}"/>
                <order property="texto_prueba"/>
            </column>

             <column id="column_select_prueba" headerText="Select" filtering="true" ordering="true" value="${entity.test_select}">
                <filter property="test_select" matching="contains" valueExpression="${this.column_select_prueba}"/>
                <order property="test_select"/>
            </column>

            <column id="column_auto" headerText="Auto" filtering="true" ordering="true" value="${entity.auto.codigo}">
                <filter property="coll_tabla_id" matching="contains" valueExpression="${this.column_auto}"/>
                <order property="coll_tabla_id"/>
            </column>

        </datatable>


    </list>

    <edit id="editPrueba">
        <script src="scripts/control.js"/>

        <!-- Texto plano -->
        <p value=""/>
        <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="TEXTO DE TEST"/>
        <p value=""/>

        <!-- Formulario -->
        <form id="formTextoEjemplo">
             <input label="Id.: " id="newTest" readonly="true"
                value="${entity.id}" />

            <table border="false">
                <row>
                    <!-- Input Texto -->
                    <input label="Texto de ejemplo: " id="texto_ejemplo" label="Texto de ejemplo" value="${entity.texto_prueba}" validator="required"/>

                    <!-- Input Select -->
                    <select id="testSelect" label="Selecci贸n Test: " value="${entity.test_select}" >
                        <options>
                            <option value="Auditor 1" label="Test 1"/>
                            <option value="Auditor 2" label="Test 2"/>
                            <option value="Auditor 3" label="Test 3"/>
                        </options>
                    </select>
                </row>
            </table>

            <!-- Autocomplete -->
            <autocomplete label="Codigo: " forceSelection="true" id="autoCodigoEjemplo"  value="${entity.coll_tabla_id}" validator="required" repo="collRepo">

                <options labelExpression="${entity.codigo}"
                    valueProperty="id_coll" 
                    labelFilteringProperty="codigo">
                </options>

                <!-- Solo mostrar los dispnibles -->
               <repofilter>
                    <eq property="disponible" value="1"/>
                </repofilter>
            </autocomplete>

            <!-- ERROR: Las fechas con required no lo cumplen -->
            <!-- Date -->
            <date id="fechaBasica" label="Date" value="${entity.fecha_basic}" validator="required"/>
            <!-- Datetime -->
            <datetime id="fechaBasicaTiempo" label="5.3 Datetime con patr贸n: " validator="required" value="${entity.fecha}"/>

            <!-- Radio -->
            <radio id="testRadio" label="Selecci贸n Radio: " >
                <options>
                    <option value="1" label="Test 1"/>
                    <option value="Auditor 2" label="Test 2"/>
                    <option value="Auditor 3" label="Test 3"/>
                </options>
            </radio>
            
            <!-- Switcher -->
            <switcher label="Activar campo condicional" id="campoExtraSwitch" value="0"/>

            <!-- Conditional render -->
            <input label="Texto de ejemplo: " id="texto_condicional" label="Texto de ejemplo" validator="required"
                render="${view.campoExtraSwitch eq 'true'}"/>

            <!-- Input image -->



        </form>

        <buttonbar type="bottom">
            <button label="Save">
                <action route="back" type="save">
                    <param name="entityId" value="${params.column_id}" />
                </action>
            </button>
            <button label="Cancel" route="back"/>
            <button label="Delete" readonly="${empty (entity.id)}" readonlyMessage="No puede realizar esta acci贸n" restoreView="true">
                <action type="delete" route="back" registerInHistory="false">
                    <param name="entityId" value="${params.column_id}" />
                </action>
            </button>
        </buttonbar>
    </edit>
</main>
