<repos>
    <repo dbFile="singra.sqlite" dbTable="snd_inspeccion" id="inspeccionRepo" >
        <meta>
            <property name="f_actuacion" converter="date" pattern="seconds" evalOn="update" expression="${date.now}" />
            <property name="f_modificacion" pattern="seconds" converter="date" evalOn="insert" expression="${date.now}" />
            <property name="f_modificacion" pattern="seconds" converter="date" evalOn="update" expression="${date.now}" />
        </meta>
    </repo>
    <repo dbFile="singra.sqlite" dbTable="snd_pregunta" id="preguntaRepo">
    </repo>
    <repo dbFile="singra.sqlite" dbTable="snd_respuesta" id="respuestaRepo">
        <mapping fk="c_pregunta_respondida" property="pregunta" repo="preguntaRepo" />
    </repo>
    <repo dbFile="singra.sqlite" dbTable="snd_respuesta_respondida" id="respuestaRespondidaRepo">
        <meta>
            <property name="f_actuacion" converter="date" pattern="seconds" evalOn="update" expression="${date.now}" />
        </meta>
        <mapping fk="c_respuesta" property="respuesta" repo="respuestaRepo" />
        <mapping fk="c_cuestionario_respondido" property="inspeccion" repo="inspeccionRepo" />
    </repo>

    <repo dbFile="singra.sqlite" dbTable="snd_pm_inspeccion" id="pmInspeccionRepo">
        <mapping fk="c_cuestionario_respondido" property="respuestaRespondida" repo="respuestaRespondidaRepo" />
        <mapping fk="c_accion_singra" property="inspeccion" repo="inspeccionRepo" />
        <meta>
            <property name="f_actuacion" converter="date" pattern="seconds" evalOn="update" expression="${date.now}" />
        </meta>
    </repo>

    <repo dbFile="singra.sqlite" dbTable="snd_doc_inspeccion" id="docInspeccionRepo">
        <meta>
            <property name="f_actuacion" converter="date" pattern="seconds" evalOn="update" expression="${date.now}" />
        </meta>
        <mapping fk="c_accion_singra" property="inspeccion" repo="inspeccionRepo" />
    </repo>
</repos>
