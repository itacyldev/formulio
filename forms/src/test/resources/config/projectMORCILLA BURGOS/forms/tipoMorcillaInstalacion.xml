<main id="tipoMorcillaInstalacion" name="Tipo de morcilla (Instalación)" repo="tipoMorcillaInstalacionRepo" >
    <list id="listTipoMorcillaInstalacion" name="Tipo de morcilla (Instalación)" description="Listado tipos de morcilla (Instalación)">
        <datatable>
            <column id="column_tipo_morcilla" headerText="Tipo morcilla" filtering="true" ordering="true" value="${entity.tipo_morcilla}">
                <filter property="tipo_morcilla" matching="contains" valueExpression="${this.column_tipo_morcilla}"/>
                <order property="tipo_morcilla"/>
            </column>
            <column id="column_nombre_instalacion" headerText="Instalación" filtering="false" ordering="false" value="${entity.instalacion.nombre_instalacion}"/>

            <column id="column_peso_unitario_kg" headerText="Peso unitario Kg" filtering="true" ordering="true" value="${entity.peso_unitario_kg}">
                <filter property="peso_unitario_kg" matching="contains" valueExpression="${this.column_peso_unitario_kg}"/>
                <order property="peso_unitario_kg"/>
            </column>
            <column id="column_unidad_kg" headerText="Unidades teóricas/kg" filtering="true" ordering="true" value="${entity.peso_unitario_kg gt 0? math:round(math:pow(10,2)/entity.peso_unitario_kg)/math:pow(10,2):null}">
                <filter property="unidad_kg" matching="contains" valueExpression="${this.column_unidad_kg}"/>
                <order property="unidad_kg"/>
            </column>
            <column id="column_merma_porcentaje" headerText="Mermas (%)" filtering="true" ordering="true" value="${entity.merma_porcentaje}">
                <filter property="merma_porcentaje" matching="contains" valueExpression="${this.column_merma_porcentaje}"/>
                <order property="merma_porcentaje"/>
            </column>
        </datatable>
        <buttonbar type="fab"/>
    </list>
    <edit id="editTipoMorcillaInstalacion">
        <form id="formTipoMorcillaInstalacion">

            <p value=""/>
            <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="TIPO MORCILLA"/>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="INSTALACION: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <table border="false">
                <row>
                    <table headerText=" Id. , Nombre instalación" weights="25, 75">
                        <row>
                            <input id="instalacion_id" value="${entity.instalacion_id}" placeHolder="${not empty(params.instalacion_id)?params.instalacion_id:null}" readonly="true"/>
                            <textarea value="${entity.instalacion.nombre_instalacion}" placeHolder="${not empty(params.nombre_instalacion)?params.nombre_instalacion:null}" readonly="true" />
                        </row>
                    </table>
                </row>
            </table>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="OPERADOR: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <table border="false">
                <row>
                    <table headerText=" Id. , Nombre operador" weights="25, 75">
                        <row>
                            <input id="operador_id" value="${entity.instalacion.operador_id}" placeHolder="${not empty(params.operador_id)?params.operador_id:null}" readonly="true"/>
                            <textarea value="${entity.instalacion.operador.razon_social}" placeHolder="${not empty(params.razon_social)?params.razon_social:null}" readonly="true" />
                        </row>
                    </table>
                </row>
            </table>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="TIPO DE MORCILLA: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <input label="Tipo de morcilla: " value="${entity.tipo_morcilla}" validator="required"/>

            <input id="peso_unitario_kg" label="Peso unitario (kg.): " value="${entity.peso_unitario_kg}" inputType="3" validator="required" />

            <input id="merma_porcentaje" label="Mermas (%)" value="${entity.merma_porcentaje}" inputType="3" validator="required" />

            <input label="Unidades teóricas por kg.: " value="${view.peso_unitario_kg gt 0? math:round(math:pow(10,2)/view.peso_unitario_kg)/math:pow(10,2):null}" inputType="3" readonly="true"/>

        </form>
        <buttonbar type="bottom">
            <button label="Save">
                <action type="save" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.expediente_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.expediente_id}" />
                </action>
            </button>

            <button label="Delete" readonly="${empty (entity.tipo_morcilla_instalacion_id)}" readonlyMessage="No puede realizar esta acción: No existe tipo de morcilla">
                <action type="delete" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.expediente_id}" />
                </action>
            </button>
        </buttonbar>
    </edit>
</main>
