<main name="Todos los componentes" description="Simple form with image example." id="formPrueba"
    repo="prue">
    <edit>
        <form>
            <tab>
                <tabitem label="Tab5: Datatable"></tabitem>
                <tabitem>
                    <input id="inputFilter" label="Input filter: " />
                    <datatable numVisibleRows="10" id="mydatable"
                        properties="input, radio, textarea, switcher, fecha, combo, autocompletado_id">
                        <repofilter>
                            <and>
                                <or>
                                    <contains property="input" value="${view.inputFilter}" />
                                    <!--<contains property="textarea" value="${view.textareaFilter}"/>-->
                                </or>
                                <eq property="switcher" value="1" />
                            </and>
                        </repofilter>
                    </datatable>
                </tabitem>
            </tab>
        </form>
    </edit>
    <list name="Todos los componentes">
        <datatable properties="input, radio, textarea, switcher, fecha, combo, autocompletado_id" />
    </list>
</main>
