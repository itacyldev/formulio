<main name="plagaPhoto" description="Plagas" id="idPlagaPhoto" repo="plagaImagesRepo" mainForm="false">    
    <list id="listPlagaPhoto" name="plagaPhoto" description="Listado fotos de plagas">
    </list>
    <edit id="editPlagaPhoto">
        <form>
            <p value=""/>
            <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="OBSERVACIÓN DE PLAGAS"/>
            <p value=""/>

            <table>
                <row>
                    <p backgroundColor="#26a69a" fontSize="18" fontColor="#FFFFFF" bold="true" value=" Inspección"/>
                </row>
                <row weights="30,70">
                    <table border="false">
                        <row>
                            <input label="Id.: " value="${entity.plaga_id}" placeHolder="${not empty(params.plaga_id)?params.plaga_id:null}" readonly="true"/>
                        </row>
                    </table>
                    <table border="false">
                        <row>
                            <date label="Fecha de inspección: " value="${entity.plaga.fecha_inspeccion}" placeHolder="${not empty(params.fecha_inspeccion)?params.fecha_inspeccion:null}" readonly="true"/>
                        </row>
                    </table>
                </row>
            </table>

            <table>
                <row>
                    <p backgroundColor="#26a69a" fontSize="18" fontColor="#FFFFFF" bold="true" value=" Imagen"/>
                </row>
                <row>
                    <image id="image" converter="b64Image" embedded="true" value="${entity.image}" inputType="1" validator="required" hasDeleteButton="false"/>
                </row>
            </table>


        </form> 
        <buttonbar type="bottom">
            <button label="Save" readonly="${empty (view.image)}" readonlyMessage="Debe aportar una foto, a través de la cámara o la galería">
                <action type="save" route="back" registerInHistory="false" restoreView="true" >
                    <param name="entityId" value="${params.plaga_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.plaga_id}" />
                </action>
            </button>

        </buttonbar>  
    </edit>
</main>
