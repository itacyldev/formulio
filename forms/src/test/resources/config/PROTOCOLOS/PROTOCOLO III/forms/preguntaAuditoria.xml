<main name="Preguntas protocolo III" description="Preguntas Auditoria" id="idPreguntaAuditoria" repo="preguntaAuditoriaRepo">
    <edit id="editPreguntaAuditoria">
        <p value=""/>
        <divisor color="#00766C" strokeWidth="10" />
        <p bold="true" value="PROTOCOLO DE CONTROL DE INFORMACIÓN AL CONSUMIDOR EN PRODUCTOS ALIMENTICIOS ECOLÓGICOS" fontSize="20"/>
        <divisor color="#00766C" strokeWidth="10" />
        <p value=""/>
        <table headerText=" Id. Auditoria., Nº Expediente, Fecha" >
            <row>
                <input id="auditoriaId" value="${entity.auditoria_id}" placeHolder="${params.auditoria_id}" readonly="true"/>
                <input value="${entity.auditoria.num_expediente}" placeHolder="${params.num_expediente}" readonly="true"/>
                <input value="${entity.auditoria.fecha}" placeHolder="${params.fecha}" readonly="true"/>
            </row>
        </table>
        <p value=""/>
            <tab>
                <tabitem label="INDICACIONES OBLIGATORIAS EN ALIMENTOS QUE LLEVAN TÉRMINOS REFERIDOS A LA PRODUCCIÓN ECOLÓGICA" id="indicacionObligatoriaProduccionEcologica">
                    <p value=""/>
                    <datalist id="datalistIndicacionObligatoriaProduccionEcologica">
                        <repofilter>
                            <and>
                                <eq property="auditoria_id" value="${params.auditoria_id}"/>
                                <eq property="tab_id" value="indicacionObligatoriaProduccionEcologica"/>
                            </and>
                        </repofilter>
                        <datalistitem>
                            <divisor color="#00766C" strokeWidth="2" />
                            <radio label="${entity.pregunta.texto_pregunta}" value="${entity.respuesta}" orientation="horizontal"  hint="${entity.pregunta.desc_pregunta}" validator="required">
                                <options>
                                    <option label="SI" value="SI" />
                                    <option label="NO" value="NO" />
                                    <option label="NP" value="NP" />
                                </options>
                            </radio>
                            <table border="false" weights="30, 20, 50">
                                <row>
                                    <p bold="true" value="Observaciones y adjuntar imagen"/>
                                    <switcher id="switcherIndicacionObligatoriaProduccionEcologica" value="${not empty(entity.image_thumb) or not empty(entity.observaciones)?1:0}"/>
                                    <p value=""/>
                                </row>
                            </table>
                            <textarea label="Observaciones: " value="${entity.observaciones}" render="${view.switcherIndicacionObligatoriaProduccionEcologica eq 'true'}" hasDeleteButton="false" />
                            <image converter="b64Image" embedded="true" label="Imagen: " value="${entity.image_thumb}" render="${view.switcherIndicacionObligatoriaProduccionEcologica eq 'true'}" hasDeleteButton="false" />
                        </datalistitem>
                    </datalist>
                </tabitem>

                <tabitem label="PRESENTACIÓN DE LAS INDICACIONES OBLIGATORIAS EN ALIMENTOS QUE LLEVAN TÉRMINOS REFERIDOS A LA PRODUCCIÓN ECOLÓGICA" id="presentacionObligatoriaProduccionEcologica">
                    <p value=""/>
                    <datalist id="datalistPresentacionObligatoriaProduccionEcologica">
                        <repofilter>
                            <and>
                                <eq property="auditoria_id" value="${params.auditoria_id}"/>
                                <eq property="tab_id" value="presentacionObligatoriaProduccionEcologica"/>
                            </and>
                        </repofilter>
                        <datalistitem>
                            <divisor color="#00766C" strokeWidth="2" />
                            <radio label="${entity.pregunta.texto_pregunta}" value="${entity.respuesta}" orientation="horizontal"  hint="${entity.pregunta.desc_pregunta}" validator="required">
                                <options>
                                    <option label="SI" value="SI" />
                                    <option label="NO" value="NO" />
                                    <option label="NP" value="NP" />
                                </options>
                            </radio>
                            <table border="false" weights="30, 20, 50">
                                <row>
                                    <p bold="true" value="Observaciones y adjuntar imagen"/>
                                    <switcher id="switcherPresentacionObligatoriaProduccionEcologica" value="${not empty(entity.image_thumb) or not empty(entity.observaciones)?1:0}"/>
                                    <p value=""/>
                                </row>
                            </table>
                            <textarea label="Observaciones: " value="${entity.observaciones}" render="${view.switcherPresentacionObligatoriaProduccionEcologica eq 'true'}" hasDeleteButton="false" />
                            <image converter="b64Image" embedded="true" label="Imagen: " value="${entity.image_thumb}" render="${view.switcherPresentacionObligatoriaProduccionEcologica eq 'true'}" hasDeleteButton="false" />
                        </datalistitem>
                    </datalist>
                </tabitem>

                <tabitem label="UTILIZACIÓN DE TÉRMINOS REFERIDOS A LA PRODUCCIÓN ECOLÓGICA" id="utilizacionTerminosProduccionEcologica">
                    <p value=""/>
                    <datalist id="datalistUtilizacionTerminosProduccionEcologica">
                        <repofilter>
                            <and>
                                <eq property="auditoria_id" value="${params.auditoria_id}"/>
                                <eq property="tab_id" value="utilizacionTerminosProduccionEcologica"/>
                            </and>
                        </repofilter>
                        <datalistitem>
                            <divisor color="#00766C" strokeWidth="2" />
                            <radio label="${entity.pregunta.texto_pregunta}" value="${entity.respuesta}" orientation="horizontal"  hint="${entity.pregunta.desc_pregunta}" validator="required">
                                <options>
                                    <option label="SI" value="SI" />
                                    <option label="NO" value="NO" />
                                    <option label="NP" value="NP" />
                                </options>
                            </radio>
                            <table border="false" weights="30, 20, 50">
                                <row>
                                    <p bold="true" value="Observaciones y adjuntar imagen"/>
                                    <switcher id="switcherUtilizacionTerminosProduccionEcologica" value="${not empty(entity.image_thumb) or not empty(entity.observaciones)?1:0}"/>
                                    <p value=""/>
                                </row>
                            </table>
                            <textarea label="Observaciones: " value="${entity.observaciones}" render="${view.switcherUtilizacionTerminosProduccionEcologica eq 'true'}" hasDeleteButton="false" />
                            <image converter="b64Image" embedded="true" label="Imagen: " value="${entity.image_thumb}" render="${view.switcherUtilizacionTerminosProduccionEcologica eq 'true'}" hasDeleteButton="false" />
                        </datalistitem>
                    </datalist>
                </tabitem>

                <tabitem label="CERTIFICADO DE PRODUCCIÓN ECOLÓGICA PARA OPERADORES MINORISTAS" id="certificadoProduccionEcologica">
                    <p value=""/>
                    <datalist id="datalistCertificadoProduccionEcologica">
                        <repofilter>
                            <and>
                                <eq property="auditoria_id" value="${params.auditoria_id}"/>
                                <eq property="tab_id" value="certificadoProduccionEcologica"/>
                            </and>
                        </repofilter>
                        <datalistitem>
                            <divisor color="#00766C" strokeWidth="2" />
                            <radio label="${entity.pregunta.texto_pregunta}" value="${entity.respuesta}" orientation="horizontal"  hint="${entity.pregunta.desc_pregunta}" validator="required">
                                <options>
                                    <option label="SI" value="SI" />
                                    <option label="NO" value="NO" />
                                    <option label="NP" value="NP" />
                                </options>
                            </radio>
                            <table border="false" weights="30, 20, 50">
                                <row>
                                    <p bold="true" value="Observaciones y adjuntar imagen"/>
                                    <switcher id="switcherCertificadoProduccionEcologica" value="${not empty(entity.image_thumb) or not empty(entity.observaciones)?1:0}"/>
                                    <p value=""/>
                                </row>
                            </table>
                            <textarea label="Observaciones: " value="${entity.observaciones}" render="${view.switcherCertificadoProduccionEcologica eq 'true'}" hasDeleteButton="false" />
                            <image converter="b64Image" embedded="true" label="Imagen: " value="${entity.image_thumb}" render="${view.switcherCertificadoProduccionEcologica eq 'true'}" hasDeleteButton="false" />
                        </datalistitem>
                    </datalist>
                </tabitem>
            </tab>
        <buttonbar type="bottom">
            <button label="Save">
                <action route="back" type="save" registerInHistory="false" controller="datalistIndicacionObligatoriaProduccionEcologica, datalistPresentacionObligatoriaProduccionEcologica, datalistUtilizacionTerminosProduccionEcologica, datalistCertificadoProduccionEcologica">
                    <param name="entityId" value="${view.auditoriaId}"/>
                </action>
            </button>
            <button label="Cancel" route="back"/>
        </buttonbar>
    </edit>
</main>
