<main id="grupoProducto" name="Grupo producto" repo="grupoProductoRepo">
    <list id="listGrupoProducto" name="Grupo Producto" description="Listado grupos de productos">
       <datatable properties="grupo_producto_id, nombre_grupo_producto" />
    </list>
    <edit id="editGrupoProducto">
        <form id="formGrupoProducto">

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="GRUPO PRODUCTO: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <input label="Nombre grupo producto: " value="${entity.nombre_grupo_producto}" validator="required"/>
        </form>
        <buttonbar type="bottom">
            <button label="Save">
                <action type="save" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.auditoria_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.auditoria_id}" />
                </action>
            </button>

            <button label="Delete" readonly="${empty (entity.grupo_producto_id)}" readonlyMessage="No puede realizar esta acciÃ³n: No existe grupo producto">
                <action type="delete" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.auditoria_id}" />
                </action>
            </button>
        </buttonbar>
    </edit>
</main>
