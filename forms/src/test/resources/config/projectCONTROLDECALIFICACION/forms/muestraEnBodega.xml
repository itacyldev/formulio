<main id="muestraBodega" name="Muestra en bodega" repo="muestraRepo" mainForm="false">
    <list id="listMuestraBodega" name="Muestra en bodega" description="Listado muestra en bodega">
        <datatable>
            <column id="column_numero_muestra" headerText="Muestra nº" filtering="true" ordering="true" value="${entity.numero_muestra}">
                <filter property="numero_muestra" matching="contains" valueExpression="${this.column_numero_muestra}"/>
                <order property="numero_muestra"/>
            </column>
            <column id="column_acta" headerText="Nº Exp." filtering="false" ordering="false" value="${entity.acta.numero_acta}"/>
        </datatable>
        <buttonbar type="fab"/>
    </list>
    <edit id="editMuestraBodega">
        <form id="formMuestraBodega">

            <p value=""/>
            <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="MUESTRA EN BODEGA"/>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="ACTA: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <table border="false">
                <row>
                    <table headerText=" Id. Acta., Nº Acta " weights="25, 75" >
                        <row>
                            <input value="${entity.acta_id}" placeHolder="${not empty(params.acta_id)?params.acta_id:null}" readonly="true"/>
                            <textarea value="${entity.acta.numero_acta}" placeHolder="${not empty(params.numero_acta)?params.numero_acta:null}" readonly="true" />
                        </row>
                    </table>
                </row>
            </table>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="MUESTRA EN BODEGA: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <input label="Nº  de muestra: " value="${entity.numero_muestra}" />

        </form>
        <buttonbar type="bottom">
            <button label="Save">
                <action type="save" route="back" registerInHistory="false">
                    <param name="entityId" value="${params.acta_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.acta_id}" />
                </action>
            </button>

            <button label="Delete" readonly="${empty (entity.muestra_id)}" readonlyMessage="No puede realizar esta acción: No existe muestra en bodega">
                <action type="delete" route="back" registerInHistory="false">
                    <param name="entityId" value="${params.acta_id}" />
                </action>
            </button>
        </buttonbar>
    </edit>
</main>
