<main id="operador" name="Operador" repo="operadorRepo">
    <list id="listOperador" name="Operador" description="Listado operadores">
        <datatable>
            <column id="column_bodega" headerText="Bodega" filtering="true" ordering="true" value="${entity.bodega}">
                <filter property="bodega" matching="contains" valueExpression="${this.column_bodega}"/>
                <order property="bodega"/>
            </column>
            <column id="column_cif" headerText="CIF" filtering="true" ordering="true" value="${entity.cif}">
                <filter property="cif" matching="contains" valueExpression="${this.column_cif}"/>
                <order property="cif"/>
            </column>
            <column id="column_representante" headerText="Representante" filtering="true" ordering="true" value="${entity.representante}">
                <filter property="representante" matching="contains" valueExpression="${this.column_representante}"/>
                <order property="representante"/>
            </column>
            <column id="column_dni_representante" headerText="DNI Representante" filtering="true" ordering="true" value="${entity.dni_representante}">
                <filter property="dni_representante" matching="contains" valueExpression="${this.column_dni_representante}"/>
                <order property="dni_representante"/>
            </column>
        </datatable>
    </list>
    <edit id="editOperador">
        <form id="formOperador">

            <p value=""/>
            <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="Operador"/>

            <p value=""/>

            <input label="Bodega: " value="${entity.bodega}" validator="required" />

            <input label="CIF: " value="${entity.cif}" />

            <input label="Representanta: " value="${entity.representante}" />

            <input label="DNI Representante: " value="${entity.dni_representante}"/>

        </form>

        <buttonbar type="bottom">
            <button label="Save">
                <action type="save" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.solicitud_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.solicitud_id}" />
                </action>
            </button>

            <button label="Delete" readonly="${empty (entity.operador_id)}" readonlyMessage="No puede realizar esta acciÃ³n: No existe operador">
                <action type="delete" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.solicitud_id}" />
                </action>
            </button>

        </buttonbar>

    </edit>
</main>
