<main id="marca" name="Marcas" repo="marcaRepo">
    <list id="listMarcas" name="Marcas" description="Listado marcas">
        <datatable>
            <column id="column_nombre_marca" headerText="Marca" filtering="true" ordering="true" value="${entity.nombre_marca}">
                <filter property="nombre_marca" matching="contains" valueExpression="${this.column_nombre_marca}"/>
                <order property="nombre_marca"/>
            </column>
            <column id="column_razon_social" headerText="Razón social" filtering="false" ordering="false" value="${entity.operador.razon_social}"/>
        </datatable>
        <buttonbar type="fab"/>
    </list>
    <edit id="editMarcas">
        <form id="formMarca">

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="OPERADOR: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <table border="false">
                <row>
                    <table headerText=" Id, Nombre operador" weights="20, 80">
                        <row>
                            <input value="${entity.operador_id}" placeHolder="${not empty(params.operador_id)?params.operador_id:null}" readonly="true" />
                            <textarea value="${entity.operador.razon_social}" placeHolder="${not empty(params.razon_social)?params.razon_social:null}" readonly="true" />
                        </row>
                    </table>
                </row>
            </table>

            <input label="Marca: " value="${entity.nombre_marca}" validator="required"/>
        </form>
        <buttonbar type="bottom">
            <button label="Save">
                <action type="save" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.operador_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.operador_id}" />
                </action>
            </button>

            <button label="Delete" readonly="${empty (entity.marca_id)}" readonlyMessage="No puede realizar esta acción: No existe la marca">
                <action type="delete" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.operador_id}" />
                </action>
            </button>
        </buttonbar>

    </edit>
</main>
