<main id="marcaComunicada" name="Marcas comunicadas" repo="marcaComunicadaRepo" mainForm="false">
    <list id="listMarcaComunicada" name="Marcas comunicadas" description="Listado marcas comunicadas">
        <datatable>
            <column id="column_marca_comunicada_nota" headerText="Nota" filtering="true" ordering="true" value="${entity.marca_comunicada_nota}">
                <filter property="marca_comunicada_nota" matching="contains" valueExpression="${this.column_marca_comunicada_nota}"/>
                <order property="marca_comunicada_nota"/>
            </column>
            <column id="column_num_expediente" headerText="Nº Exp." filtering="false" ordering="false" value="${entity.expediente.num_expediente}"/>
            <column id="column_razon_social" headerText="Razón social" filtering="false" ordering="false" value="${entity.expediente.operador.razon_social}"/>
            <column id="column_marca_comunicada_fecha_comunicacion" headerText="Fecha" filtering="true" ordering="true" value="${entity.marca_comunicada_fecha_comunicacion}">
                <filter property="marca_comunicada_fecha_comunicacion" matching="contains" valueExpression="${this.column_marca_comunicada_fecha_comunicacion}"/>
                <order property="marca_comunicada_fecha_comunicacion"/>
            </column>
            <column id="column_marca_comunicada_cumple" headerText="Cumple" filtering="true" ordering="true" value="${entity.marca_comunicada_cumple}">
                <filter property="marca_comunicada_cumple" matching="contains" valueExpression="${this.column_marca_comunicada_cumple}"/>
                <order property="marca_comunicada_cumple"/>
            </column>
        </datatable>
        <buttonbar type="fab"/>
    </list>
    <edit id="editMarcaComunicada">
        <form id="formMarcaComunicada">

            <p value=""/>
            <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="COMUNICACIONES AL ÓRGANO DE GESTIÓN. TIPOS DE MORCILLA ELABORADOS"/>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="EXPEDIENTE: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <table border="false">
                <row>
                    <table headerText=" Id. Exp., Nº Expediente, Operador" weights="25, 35, 40" >
                        <row>
                            <input value="${entity.procedimientoAutocontrol.expediente_id}" placeHolder="${not empty(params.expediente_id)?params.expediente_id:null}" readonly="true"/>
                            <textarea value="${entity.procedimientoAutocontrol.expediente.num_expediente}" placeHolder="${not empty(params.num_expediente)?params.num_expediente:null}" readonly="true" />
                            <textarea value="${entity.procedimientoAutocontrol.expediente.operador.razon_social}" placeHolder="${not empty(params.operador)?params.operador:null}" readonly="true" />
                        </row>
                    </table>
                </row>
            </table>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="MARCAS COMUNICADAS: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <input label="Id. procedimiento autocontrol: " value="${entity.procedimiento_autocontrol_id}" placeHolder="${not empty(params.procedimiento_autocontrol_id)?params.procedimiento_autocontrol_id:null}" readonly="true"/>

            <textarea label="Notas aclaratorias: " value="${entity.marca_comunicada_nota}" />

            <date label="Fecha: " value="${entity.marca_comunicada_fecha_comunicacion}"/>

            <radio label="Cumple: " value="${entity.marca_comunicada_cumple}" orientation="horizontal" weights="15, 15">
                <options>
                    <option label="Sí" value="S" />
                    <option label="No" value="N" />
                </options>
            </radio>

        </form>
        <buttonbar type="bottom">
            <button label="Save">
                <action type="save" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.procedimiento_autocontrol_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.procedimiento_autocontrol_id}" />
                </action>
            </button>

            <button label="Delete" readonly="${empty (entity.marca_comunicada_id)}" readonlyMessage="No puede realizar esta acción: No existe marca comunicada">
                <action type="delete" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.procedimiento_autocontrol_id}" />
                </action>
            </button>
        </buttonbar>
    </edit>
</main>
