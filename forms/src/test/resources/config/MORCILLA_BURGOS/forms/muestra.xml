<main name="muestra" description="Muestra" id="idMuestra" repo="muestraRepo" mainForm="false">
    <list id="listMuestra" name="ACTA DE TOMA DE MUESTRAS">
        <datatable  route="idMuestra-editMuestra"/>
        <buttonbar type="fab"/>
    </list>

    <edit id="editMuestra">
        <form>
            <p value=""/>
            <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="MUESTRA"/>
            <p value=""/>

            <table headerText=" Id. Acta, Acta, Id. Exp., Nº Exp." weights="20, 30, 20, 30">
                <row>
                    <input id="acta_id" value="${entity.acta_id}" placeHolder="${params.acta_id}" readonly="true"/>
                    <input id="acta" value="${entity.acta.acta}" placeHolder="${params.acta}" readonly="true"/>
                    <input id="expediente_id" value="${entity.acta.expediente_id}" placeHolder="${params.expediente_id}" readonly="true"/>
                    <input id="num_expediente" value="${entity.acta.expediente.num_expediente}" placeHolder="${params.num_expediente}" readonly="true"/>
                </row>
            </table>
            <table headerText=" Id. Operador, Razón social" weights="20, 80">
                <row>
                    <input id="operador_id" value="${entity.acta.expediente.operador_id}" placeHolder="${params.operador_id}" readonly="true"/>
                    <input id="razon_social" value="${entity.acta.expediente.operador.razon_social}" placeHolder="${params.razon_social}" readonly="true"/>
                </row>
            </table>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="DATOS DE LA MUESTRA: "/>
            <divisor color="#00766C" strokeWidth="8" />
            <p value=""/>

            <table weights="28, 72">
                <row>
                    <input label="Muestra: " readonly="true"/>
                    <input value="${entity.muestra}" />
                </row>
                <row>
                    <input label="Tipo de muestra (materia prima, producto elaborado): " readonly="true"/>
                    <input value="${entity.tipo_muestra}" />
                </row>
                <row>
                    <input label="La muestra está dispuesta para su comercialización: " readonly="true"/>
                    <radio value="${entity.dispuesta_comercializacion}" orientation="horizontal" weights="20, 20">
                        <options>
                            <option label="SI" value="SI" />
                            <option label="NO" value="NO" />
                        </options>
                    </radio>
                </row>
                <row>
                    <input label="Denominación de venta: " readonly="true"/>
                    <input value="${entity.denominacion_venta}" />
                </row>
                <row>
                    <input label="Marca comercial: " readonly="true"/>
                    <input value="${entity.marca_comercial}" />
                </row>
                <row>
                    <input label="Lote: " readonly="true"/>
                    <input value="${entity.lote}" />
                </row>
                <row>
                    <input label="Fecha consumo preferente: " readonly="true"/>
                    <date value="${entity.fecha_consumo_preferente}" />
                </row>
                <row>
                    <input label="Cantidad producto muestreado: " readonly="true"/>
                    <input value="${entity.cantidad_producto_muestreado}" />
                </row>
                <row weights="100">
                    <p backgroundColor="#B1B1B1" fontSize="18" fontColor="#FFFFFF" bold="true" value=" Inicial"/>
                </row>

                <row weights="28, 24, 24, 24">
                    <input label="Determinación a realizar " readonly="true"/>
                    <table border="false">
                        <row>
                            <p value="FQ: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_inicial_fq_1}"/>
                        </row>
                        <row>
                            <p value="MORF: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_inicial_morf_1}"/>
                        </row>
                        <row>
                            <p value="ORG: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_inicial_org_1}"/>
                        </row>
                    </table>
                    <table border="false">
                        <row>
                            <p value="FQ: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_inicial_fq_2}"/>
                        </row>
                        <row>
                            <p value="MORF: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_inicial_morf_2}"/>
                        </row>
                        <row>
                            <p value="ORG: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_inicial_org_2}"/>
                        </row>
                    </table>
                    <table border="false">
                        <row>
                            <p value="FQ: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_inicial_fq_3}"/>
                        </row>
                        <row>
                            <p value="MORF: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_inicial_morf_3}"/>
                        </row>
                        <row>
                            <p value="ORG: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_inicial_org_3}"/>
                        </row>
                    </table>
                </row>
                <row weights="28, 24, 24, 24">
                    <input label="Nº contraetiqueta/s: " readonly="true"/>
                    <input value="${entity.num_contraetiqueta_inicial_1}" />
                    <input value="${entity.num_contraetiqueta_inicial_2}" />
                    <input value="${entity.num_contraetiqueta_inicial_3}" />
                </row>
                <row weights="28, 24, 24, 24">
                    <input label="Nº precinto/s: " readonly="true"/>
                    <input value="${entity.num_precinto_inicial_1}" />
                    <input value="${entity.num_precinto_inicial_2}" />
                    <input value="${entity.num_precinto_inicial_3}" />
                </row>

                <row weights="100">
                    <p backgroundColor="#B1B1B1" fontSize="18" fontColor="#FFFFFF" bold="true" value=" Contradictorio"/>
                </row>
                <row weights="28, 24, 24, 24">
                    <input label="Determinación a realizar " readonly="true"/>
                    <table border="false">
                        <row>
                            <p value="FQ: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_contradictorio_fq_1}"/>
                        </row>
                        <row>
                            <p value="MORF: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_contradictorio_morf_1}"/>
                        </row>
                        <row>
                            <p value="ORG: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_contradictorio_org_1}"/>
                        </row>
                    </table>
                    <table border="false">
                        <row>
                            <p value="FQ: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_contradictorio_fq_2}"/>
                        </row>
                        <row>
                            <p value="MORF: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_contradictorio_morf_2}"/>
                        </row>
                        <row>
                            <p value="ORG: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_contradictorio_org_2}"/>
                        </row>
                    </table>
                    <table border="false">
                        <row>
                            <p value="FQ: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_contradictorio_fq_3}"/>
                        </row>
                        <row>
                            <p value="MORF: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_contradictorio_morf_3}"/>
                        </row>
                        <row>
                            <p value="ORG: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_contradictorio_org_3}"/>
                        </row>
                    </table>
                </row>
                <row weights="28, 24, 24, 24">
                    <input label="Nº contraetiqueta/s: " readonly="true"/>
                    <input value="${entity.num_contraetiqueta_contradictorio_1}" />
                    <input value="${entity.num_contraetiqueta_contradictorio_2}" />
                    <input value="${entity.num_contraetiqueta_contradictorio_3}" />
                </row>
                <row weights="28, 24, 24, 24">
                    <input label="Nº precinto/s: " readonly="true"/>
                    <input value="${entity.num_precinto_contradictorio_1}" />
                    <input value="${entity.num_precinto_contradictorio_2}" />
                    <input value="${entity.num_precinto_contradictorio_3}" />
                </row>

                <row weights="100">
                    <p backgroundColor="#B1B1B1" fontSize="18" fontColor="#FFFFFF" bold="true" value=" Dirimente"/>
                </row>
                <row weights="28, 24, 24, 24">
                    <input label="Determinación a realizar " readonly="true"/>
                    <table border="false">
                        <row>
                            <p value="FQ: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_dirimente_fq_1}"/>
                        </row>
                        <row>
                            <p value="MORF: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_dirimente_morf_1}"/>
                        </row>
                        <row>
                            <p value="ORG: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_dirimente_org_1}"/>
                        </row>
                    </table>
                    <table border="false">
                        <row>
                            <p value="FQ: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_dirimente_fq_2}"/>
                        </row>
                        <row>
                            <p value="MORF: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_dirimente_morf_2}"/>
                        </row>
                        <row>
                            <p value="ORG: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_dirimente_org_2}"/>
                        </row>
                    </table>
                    <table border="false">
                        <row>
                            <p value="FQ: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_dirimente_fq_3}"/>
                        </row>
                        <row>
                            <p value="MORF: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_dirimente_morf_3}"/>
                        </row>
                        <row>
                            <p value="ORG: " bold="true"/>
                            <switcher value="${entity.determinacion_realizar_dirimente_org_3}"/>
                        </row>
                    </table>
                </row>
                <row weights="28, 24, 24, 24">
                    <input label="Nº contraetiqueta/s: " readonly="true"/>
                    <input value="${entity.num_contraetiqueta_dirimente_1}" />
                    <input value="${entity.num_contraetiqueta_dirimente_2}" />
                    <input value="${entity.num_contraetiqueta_dirimente_3}" />
                </row>
                <row weights="28, 24, 24, 24">
                    <input label="Nº precinto/s: " readonly="true"/>
                    <input value="${entity.num_precinto_dirimente_1}" />
                    <input value="${entity.num_precinto_dirimente_2}" />
                    <input value="${entity.num_precinto_dirimente_3}" />
                </row>
            </table>
        </form>
        <buttonbar type="bottom">
            <button label="Save">
                <action type="save" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.acta_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.acta_id}" />
                </action>
            </button>

            <button label="Delete" readonly="${empty (entity.muestra_id)}" readonlyMessage="No puede realizar esta acción: No existe muestra" restoreView="true">
                <action type="delete" route="back" registerInHistory="false">
                    <param name="entityId" value="${params.acta_id}" />
                </action>
            </button>
        </buttonbar>
    </edit>
</main>
