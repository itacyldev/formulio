<main id="tipoMorcilla" name="Tipo de morcilla" repo="tipoMorcillaRepo">
    <list id="listTipoMorcilla" name="Tipo de morcilla" description="Listado tipos de morcilla">
        <datatable>
            <column id="column_tipo_morcilla" headerText="Tipo morcilla" filtering="true" ordering="true" value="${entity.tipo_morcilla}">
                <filter property="tipo_morcilla" matching="contains" valueExpression="${this.column_tipo_morcilla}"/>
                <order property="tipo_morcilla"/>
            </column>
            <column id="column_nombre_" headerText="Instalación" filtering="false" ordering="false" value="${entity.expediente.instalacion.nombre_instalacion}"/>

            <column id="column_peso_unitario_kg" headerText="Peso unitario Kg" filtering="true" ordering="true" value="${entity.peso_unitario_kg}">
                <filter property="peso_unitario_kg" matching="contains" valueExpression="${this.column_peso_unitario_kg}"/>
                <order property="peso_unitario_kg"/>
            </column>
            <column id="column_unidad_kg" headerText="Unidades teóricas/kg" filtering="true" ordering="true" value="${entity.peso_unitario_kg gt 0? math:round(math:pow(10,2)/entity.peso_unitario_kg)/math:pow(10,2):null}">
                <filter property="unidad_kg" matching="contains" valueExpression="${this.column_unidad_kg}"/>
                <order property="unidad_kg"/>
            </column>
        </datatable>
        <buttonbar type="fab"/>
    </list>
    <edit id="editTipoMorcilla">
        <form id="formTipoMorcilla">

            <p value=""/>
            <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="TIPO MORCILLA"/>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="EXPEDIENTE: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <table border="false" render="${not empty(params.expediente_id) or not empty(entity.expediente_id)}">
                <row>
                    <table headerText=" Id. Exp., Nº Expediente" weights="25, 75" >
                        <row>
                            <input value="${entity.expediente_id}" placeHolder="${not empty(params.expediente_id)?params.expediente_id:null}" readonly="true"/>
                            <textarea value="${entity.expediente.num_expediente}" placeHolder="${not empty(params.num_expediente)?params.num_expediente:null}" readonly="true" />
                        </row>
                    </table>
                </row>
            </table>

            <autocomplete label="Expediente" value="${entity.expediente_id}" forceSelection="true" repo="actasControlRepo" render="${empty(params.expediente_id) and empty(entity.expediente_id)}" >
                <options labelExpression="${entity.num_expediente}" labelFilteringProperty="num_expediente" valueProperty="id" />
                <repofilter>
                    <eq property="instalacion_id" value="${view.instalacion_id}" mandatory="true"/>
                    <contains property="num_expediente" value="${this.value}"/>
                </repofilter>
            </autocomplete>


            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="INSTALACION: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <table border="false">
                <row>
                    <table headerText=" Id. , Nombre instalación" weights="25, 75">
                        <row>
                            <input id="instalacion_id" value="${entity.instalacion_id}" placeHolder="${not empty(params.instalacion_id)?params.instalacion_id:null}" readonly="true"/>
                            <textarea value="${entity.instalacion.nombre_instalacion}" placeHolder="${not empty(params.nombre_instalacion)?params.nombre_instalacion:null}" readonly="true" />
                        </row>
                    </table>
                </row>
            </table>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="OPERADOR: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <table border="false">
                <row>
                    <table headerText=" Id. , Nombre operador" weights="25, 75">
                        <row>
                            <input id="operador_id" value="${entity.instalacion.operador_id}" placeHolder="${not empty(params.operador_id)?params.operador_id:null}" readonly="true"/>
                            <textarea value="${entity.instalacion.operador.razon_social}" placeHolder="${not empty(params.razon_social)?params.razon_social:null}" readonly="true" />
                        </row>
                    </table>
                </row>
            </table>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="TIPO DE MORCILLA: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <input label="Tipo de morcilla: " value="${entity.tipo_morcilla}" validator="required"/>

            <input id="peso_unitario_kg" label="Peso unitario (kg.): " value="${entity.peso_unitario_kg}" inputType="3"/>

            <input label="Unidades teóricas por kg.: " value="${view.peso_unitario_kg gt 0? math:round(math:pow(10,2)/view.peso_unitario_kg)/math:pow(10,2):null}" inputType="3" readonly="true"/>

            <radio label="Control Documental: " value="${entity.control_documental}" placeHolder="${params.desde eq 'Control Documental'?'S':null}" orientation="horizontal" render="${params.desde eq 'Control Documental' or params.desde eq 'Instalación'}">
                <options>
                    <option label="Sí" value="S" />
                    <option label="No" value="N"/>
                </options>
            </radio>
            <radio label="Control In Situ: " value="${entity.control_in_situ}" placeHolder="${params.desde eq 'Control In Situ'?'S':null}" orientation="horizontal" render="${params.desde eq 'Control In Situ' or params.desde eq 'Instalación'}">
                <options>
                    <option label="Sí" value="S" />
                    <option label="No" value="N"/>
                </options>
            </radio>
        </form>
        <buttonbar type="bottom">
            <button label="Save">
                <action type="save" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.expediente_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.expediente_id}" />
                </action>
            </button>

            <button label="Delete" readonly="${empty (entity.tipo_morcilla_id)}" readonlyMessage="No puede realizar esta acción: No existe tipo de morcilla">
                <action type="delete" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.expediente_id}" />
                </action>
            </button>
        </buttonbar>
    </edit>
</main>
