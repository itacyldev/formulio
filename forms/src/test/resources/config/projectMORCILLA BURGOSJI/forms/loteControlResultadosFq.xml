<main id="loteControlResultadosFq" name="Lote control resultados físico-químicos" repo="loteControlResultadosFqRepo" mainForm="false">
    <list id="listLoteControlResultadosFq" name="Lote control resultados físico-químicos" description="Listado control resultados físico-químicos">
        <datatable>
            <column id="column_num_lote" headerText="Nº Lote" filtering="true" ordering="true" value="${entity.num_lote}">
                <filter property="num_lote" matching="contains" valueExpression="${this.column_num_lote}"/>
                <order property="num_lote"/>
            </column>
            <column id="column_num_expediente" headerText="Nº Exp." filtering="false" ordering="false" value="${entity.procedimientoAutocontrol.expediente.num_expediente}"/>
            <column id="column_razon_social" headerText="Razón social" filtering="false" ordering="false" value="${entity.procedimientoAutocontrol.expediente.operador.razon_social}"/>
            <column id="column_fecha" headerText="Fecha" filtering="true" ordering="true" value="${entity.fecha}">
                <filter property="fecha" matching="contains" valueExpression="${this.column_fecha}"/>
                <order property="fecha"/>
            </column>
            <column id="column_ph" headerText="Ph" filtering="true" ordering="true" value="${entity.ph}">
                <filter property="ph" matching="contains" valueExpression="${this.column_ph}"/>
                <order property="ph"/>
            </column>
            <column id="column_humedad" headerText="Humedad" filtering="true" ordering="true" value="${entity.humedad}">
                <filter property="humedad" matching="contains" valueExpression="${this.column_humedad}"/>
                <order property="humedad"/>
            </column>
            <column id="column_grasa" headerText="Grasa" filtering="true" ordering="true" value="${entity.grasa}">
                <filter property="grasa" matching="contains" valueExpression="${this.column_grasa}"/>
                <order property="grasa"/>
            </column>
            <column id="column_azucares" headerText="Azúcares" filtering="true" ordering="true" value="${entity.azucares}">
                <filter property="azucares" matching="contains" valueExpression="${this.column_azucares}"/>
                <order property="azucares"/>
            </column>
            <column id="column_fibra" headerText="Fibra" filtering="true" ordering="true" value="${entity.fibra}">
                <filter property="fibra" matching="contains" valueExpression="${this.column_fibra}"/>
                <order property="fibra"/>
            </column>
            <column id="column_sal" headerText="Sal" filtering="true" ordering="true" value="${entity.sal}">
                <filter property="sal" matching="contains" valueExpression="${this.column_sal}"/>
                <order property="sal"/>
            </column>
            <column id="column_periodicidad" headerText="Periodicidad" filtering="true" ordering="true" value="${entity.periodicidad}">
                <filter property="periodicidad" matching="contains" valueExpression="${this.column_periodicidad}"/>
                <order property="periodicidad"/>
            </column>
            <column id="column_cumple" headerText="Cumple" filtering="true" ordering="true" value="${entity.cumple}">
                <filter property="cumple" matching="contains" valueExpression="${this.column_cumple}"/>
                <order property="cumple"/>
            </column>
        </datatable>
        <buttonbar type="fab"/>
    </list>
    <edit id="editLoteControlResultadosFq">
        <form id="formLoteControlResultadosFq">

            <p value=""/>
            <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="PLAN DE CONTROL ANALÍTICO/ANÁLISIS FISICO-QUÍMICOS"/>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="EXPEDIENTE: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <table border="false">
                <row>
                    <table headerText=" Id. Exp., Nº Expediente, Operador" weights="25, 35, 40">
                        <row>
                            <input value="${entity.procedimientoAutocontrol.expediente_id}" placeHolder="${not empty(params.expediente_id)?params.expediente_id:null}" readonly="true"/>
                            <textarea value="${entity.procedimientoAutocontrol.expediente.num_expediente}" placeHolder="${not empty(params.num_expediente)?params.num_expediente:null}" readonly="true" />
                            <textarea value="${entity.procedimientoAutocontrol.expediente.operador.razon_social}" placeHolder="${not empty(params.operador)?params.operador:null}" readonly="true" />
                        </row>
                    </table>
                </row>
            </table>

            <p value=""/>
            <divisor color="#00766C" strokeWidth="8" />
            <p bold="true" value="RESULTADOS FÍSICO-QUÍMICOS: "/>
            <divisor color="#00766C" strokeWidth="8" />

            <p value=""/>
            <table>
                <row colspan="6">
                    <p italic="true" value="Normas de referencia"/>
                </row>
                <row>
                    <p italic="true" value="Ph"/>
                    <p italic="true" value="Humedad"/>
                    <p italic="true" value="Grasa"/>
                    <p italic="true" value="Azúcares"/>
                    <p italic="true" value="Fibra"/>
                    <p italic="true" value="Sal"/>
                </row>
                <row>
                    <p italic="true" value="6-7"/>
                    <p italic="true" value="54-67%"/>
                    <p italic="true" value="15-25% ss"/>
                    <p italic="true" value="≥ 3,5% ss"/>
                    <p italic="true" value="≥ 2,7% ss"/>
                    <p italic="true" value="0,5-2%"/>
                </row>
            </table>
            <p value=""/>

            <table border="false">
                <row colspan="6">
                    <input label="Id. procedimiento autocontrol: " value="${entity.procedimiento_autocontrol_id}" placeHolder="${not empty(params.procedimiento_autocontrol_id)?params.procedimiento_autocontrol_id:null}" readonly="true"/>
                </row>

                <row colspan="3,3">
                    <input label="Nº Lote: " value="${entity.num_lote}" validator="required" />
                    <date label="Fecha" value="${entity.fecha}" />
                </row>
                <row colspan="6">
                    <table headerText=" Ph, Humedad, Grasa, Azúcares, Fibra, Sal">
                        <row>
                        <input value="${entity.ph}" inputType="3" hasDeleteButton="false"/>
                        <input value="${entity.humedad}" inputType="3" hasDeleteButton="false"/>
                        <input value="${entity.grasa}" inputType="3" hasDeleteButton="false"/>
                        <input value="${entity.azucares}" inputType="3" hasDeleteButton="false"/>
                        <input value="${entity.fibra}" inputType="3" hasDeleteButton="false"/>
                        <input value="${entity.sal}" inputType="3" hasDeleteButton="false"/>
                        </row>
                    </table>
                </row>
                <row colspan="3,3">
                    <input label="Periodicidad: " value="${entity.periodicidad}"/>
                    <radio label="Cumple" value="${entity.cumple}" orientation="horizontal" weights="15, 15">
                        <options>
                            <option label="Sí" value="S" />
                            <option label="No" value="N" />
                        </options>
                    </radio>
                </row>

            </table>

        </form>
        <buttonbar type="bottom">
            <button label="Save">
                <action type="save" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.procedimiento_autocontrol_id}" />
                </action>
            </button>

            <button label="Cancel">
                <action type="cancel" route="back" restoreView="true">
                    <param name="entityId" value="${params.procedimiento_autocontrol_id}" />
                </action>
            </button>

            <button label="Delete" readonly="${empty (entity.lote_control_resultados_fq_id)}" readonlyMessage="No puede realizar esta acción: No existe lote control resultados morfológicos">
                <action type="delete" route="back" registerInHistory="false" restoreView="true">
                    <param name="entityId" value="${params.procedimiento_autocontrol_id}" />
                </action>
            </button>
        </buttonbar>
    </edit>
</main>
