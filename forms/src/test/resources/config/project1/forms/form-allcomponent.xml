<main name="COMPONENTS" id="formComponents"
    repo="prue">
    <edit>
        <form>
            <p value=""/>
            <p backgroundColor="#26a69a" fontSize="22" fontColor="#FFFFFF" bold="true" value="FORM"/>
            <p value=""/>

            <table>
                <row>
                    <input label="Name: " value=""/>
                    <input label="Surname: " value="" />
                </row>
               <row>
                    <input label="Email: " value="" />
                    <radio label="Gender:" orientation="horizontal" value="" >
                        <options>
                            <option label="M" value="Male" />
                            <option label="F" value="Female" />
                        </options>
                    </radio>
                </row>
                <row>
                    <select label="Country: " >
                        <options>
                            <option value="usa" label="United States"/>
                            <option value="canada" label="Canada"/>
                          </options>
                    </select>
                    <date converter="string" label="Birth date: "
                        value="${entity.fecha}" hasTodayButton="false" />
                </row>
                <row>
                    <image converter="b64Image" embedded="true" label="Avatar: "
                        value="${entity.image_thumb}" inputType="1"/>
                </row>
                <row>
                    <switcher label="Notifications: " value="${entity.switcher}"/>
                </row>
            </table>

            <button label="Submit"/>

        </form>
    </edit>
    <list name="COMPONENTS">
        <datatable properties="input, radio, textarea, switcher, fecha, combo, autocompletado_id" />
    </list>
</main>