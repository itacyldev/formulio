<main name="Todos los componentes" description="Simple form with image example." id="formPrueba" repo="prue">
    <edit>
        <form>
            <tab>
                <tabitem label="Tab 1">
                    <link route="form1-list" value="Ir a Form Card Image"/>

                    <input label="1. Input: " value="${entity.input}" validator="required" />

                    <radio label="2. Radio:" orientation="horizontal" value="${entity.radio}" validator="required">
                        <options>
                            <option label="Radio1" value="Radio1" />
                            <option label="Radio2" value="Radio2" />
                            <option label="Radio3" value="Radio3" />
                        </options>
                    </radio>

                    <textarea label="3. Textarea: " value="${entity.textarea}"  validator="required"/>

                    <switcher label="4. Switcher: " value="${entity.switcher}" />

                    <date label="5. Date: "  value="${entity.fecha}" converter="string" validator="required"/>

                    <select label="6. Select: "  value="${entity.combo}" validator="required">
                        <options>
                            <option label="Combo1" value="Combo1" />
                            <option label="Combo2" value="Combo2" />
                            <option label="Combo3" value="Combo3" />
                        </options>
                    </select>

                    <autocomplete forceSelection="true" id="autocompletado_id" label="7. Autocomplete: "
                        repo="autocompletado" value="${entity.autocompletado_id}" validator="required">
                        <options labelExpression="${entity.valor}" labelFilteringProperty="valor" valueProperty="autocompletado_id" />
                    </autocomplete>

                    <divisor color="#00766C" strokeWidth="4" />

                    <image label="8. Imagen: " repo="superHImages" value="${entity.image}" />

                    <image label="9. Imagen: " value="${'superheroes/batgirl.jpg'}" />

                    <image label="10. Imagen: " converter="b64Image" embedded="true" value="${entity.image_thumb}" />

                </tabitem>
                <tabitem label="Tab 2: Table">
                    <table headerText="1. Con bordes">
                        <row colspans="3" >
                            <paragraph value="Descripción de la tabla en un paragraph"/>
                        </row>
                        <row>
                            <textarea readOnly="true" value="1. " />
                            <textarea readOnly="true" value="Input " />
                            <textarea readOnly="true" value="${entity.input}" />
                        </row>
                    </table>

                    <table headerText="2. Sin bordes" border="false">
                        <row colspans="3" border="false">
                            <paragraph value="Descripción de la tabla en un paragraph"/>
                        </row>
                        <row border="false">
                            <textarea readOnly="true" value="1.  " />
                            <textarea readOnly="true" value="Input " />
                            <textarea readOnly="true" value="${entity.input}" />
                        </row>
                    </table>

                    <table headerText="3. Pesos">
                        <row colspans="3" >
                            <paragraph value="1: 20-30-50, 2: 20-30, 3: 20-30-50-70, 4: 40-40-80, 5: 30-80 6: asdfla"/>
                        </row>
                        <row weights="20, 30, 50">
                            <textarea readOnly="true" value="1.  "  />
                            <textarea readOnly="true" value="Input " />
                            <input hasDeleteButton="false" value="${entity.input}"  />
                        </row>
                        <row weights="20, 30">
                            <textarea readOnly="true" value="2.  " />
                            <textarea readOnly="true" value="Textarea: " />
                            <textarea hasDeleteButton="false" value="${entity.textarea}" />
                        </row>
                        <row weights="20, 30, 50, 70">
                            <textarea readOnly="true" value="3.  " />
                            <textarea readOnly="true" value="Date: " />
                            <date hasDeleteButton="false" value="${entity.fecha}" converter="string"/>
                        </row>
                        <row weights="40, 40, 80">
                            <textarea readOnly="true" value="4.  " />
                            <textarea readOnly="true" value="Select: " />
                            <select hasDeleteButton="false" value="${entity.combo}" >
                                <options>
                                    <option label="Combo1" value="Combo1" />
                                    <option label="Combo2" value="Combo2" />
                                    <option label="Combo3" value="Combo3" />
                                </options>
                            </select>
                        </row>
                        <row weights="30, 80">
                            <textarea readOnly="true" value="5.  " />
                            <textarea readOnly="true" value="Switcher: " />
                            <switcher value="${entity.switcher}" />
                        </row>
                        <row weights="asdfla">
                            <textarea readOnly="true" value="6.  " />
                            <textarea readOnly="true" value="Autocomplete: " />
                            <textarea readOnly="true" value="${entity.autocompletado_id}" />
                        </row>
                        <row>
                            <textarea readOnly="true" value="7.  " />
                            <textarea readOnly="true" value="Image: " />
                            <image hasDeleteButton="false" repo="superHImages" value="${entity.image}" />
                        </row>
                    </table>
                </tabitem>
                <tabitem label="Tab 3: Card">
                    <card template="card_template_1" label="Card-${entity.id}" title="${entity.input}" subtitle="${entity.textarea}" />
                </tabitem>
                <tabitem label="Tab 4: Datalist">
                    <datalist>
                        <card expandable="true" expanded="false" label="Card-${entity.id}">
                            <head name="title" value="${entity.input}" />
                            <head name="subtitle" value="${entity.textarea}" />"
                            <!--<image repo="superHImages" value="${entity.image}" />-->
                        </card>
                    </datalist>
                </tabitem>
                <tabitem label="Tab5: Datatable">
                    <datatable properties="input, radio, textarea, switcher, fecha, combo, autocompletado_id" numVisibleRows="10">
                        <repofilter>
                            <and>
                                <or>
                                    <contains property="input" value="1"/>
                                    <contains property="textarea" value="2"/>
                                </or>
                                <eq property="switcher" value="1"/>
                            </and>
                        </repofilter>
                    </datatable>
                </tabitem>
            </tab>
        </form>
    </edit>
    <list name="Todos los componentes">
        <datatable properties="input, radio, textarea, switcher, fecha, combo, autocompletado_id" />
    </list>
</main>
