<main name="Todos los componentes" description="Simple form with image example." id="formDate"
    repo="prue">
    <edit>
        <form>
                    <date converter="string" label="5.1 Date con patrón yyyy/MM/dd: " validator="required"
                        value="${entity.fecha}" pattern="yyyy/MM/dd" hint="Hint 5.1 Date con patrón yyyy/MM/dd" />

                    <date converter="string" label="5.2 Date sin patrón: " validator="required"
                        value="${entity.fecha}" hint="Hint 5.2 Date sin patrón"/>

                    <datetime converter="string" label="5.3 Datetme con patrón: " validator="required"
                        value="${entity.fecha}" pattern="yyyy/MM/dd HH/mm/ss" hint="Hint 5.2 Date sin patrón"/>

                    <datetime converter="string" label="5.3 Datetime sin patrón: " validator="required"
                        value="${entity.fecha}" hint="Hint 5.3 Datetime sin patrón"/>

                    <date id="unixepochSeconds" converter="long" pattern="unixepoch_s" label="5.4 Fecha en segundos: " value="${entity.f_segundos}"/>

                    <date id="unixepochMilisecconds" converter="long" pattern="unixepoch_m" label="5.5 Fecha en milisegundos: " value="${entity.f_milisegundos}"/>


        </form>
    </edit>
    <list name="Todos los componentes">
        <datatable properties="input, radio, textarea, switcher, fecha, combo, autocompletado_id" />
    </list>
</main>