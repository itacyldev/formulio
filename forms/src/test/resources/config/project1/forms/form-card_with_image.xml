<main name="form card" description="Card with image example." id="form4" repo="superHRepo">
    <edit>
        <form>
            <card label="Label" expandable="true" expanded="true" subtitle="${entity.real_name}" title="${entity.name}">
                <image repo="superHImages" value="${entity.image}" readOnly="true"/>
            </card>
            <card label="Label" expandable="true" expanded="true" subtitle="${entity.real_name}" title="${entity.name}" imagePosition="bottom">
                <image repo="superHImages" value="${entity.image}" readOnly="true"/>
            </card>
            <card label="Label" expandable="true" expanded="true" subtitle="${entity.real_name}" title="${entity.name}" imagePosition="right">
                <image repo="superHImages" value="${entity.image}" readOnly="true"/>
            </card>
            <card label="${entity.name}" expandable="true" expanded="true" imagePosition="left">
                <head name="title" value="${entity.name}"/>
                <head name="subtitle" value="subtitle"/>
                <image repo="superHImages" value="${entity.image}" inputType="0"/>
            </card>

        </form>
    </edit>
    <list name="Superheroes">
        <datatable properties="name, real_name, age" />
    </list>
</main>
