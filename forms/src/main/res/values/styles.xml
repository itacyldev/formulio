<resources>

    <style name="ActionBarPopupStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">?attr/AppBackgroundColor</item>
        <item name="android:textColor">?attr/onAppBackgroundColor</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">?attr/primaryColor</item>
        <item name="itemBackground">?attr/primaryColor</item>
        <item name="itemIconTint">?attr/onPrimaryColor</item>
        <item name="itemTextColor">?attr/onPrimaryColor</item>
    </style>

    <style name="ProjectFormsCardStyle">
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardBackgroundColor">?attr/surfaceColor</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="FloatingActionAddButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="backgroundTint">?attr/primaryColor</item>
        <item name="tint">?attr/onPrimaryColor</item>
        <item name="srcCompat">@android:drawable/ic_input_add</item>
    </style>

    <!-- Components -->
    <style name="HintTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item> <!-- floating hint text size -->
        <item name="android:textColorHint">?attr/onSurfaceColor</item>
        <item name="android:textColor">?attr/onSurfaceColor</item>
        <item name="android:textStyle">normal|italic</item>
        <item name="colorAccent">?attr/onSurfaceColor</item>
        <item name="colorControlNormal">?attr/onSurfaceColor</item>
        <item name="colorControlActivated">?attr/onSurfaceColor</item>
    </style>

    <style name="TextInputLabel_label" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">16sp</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:textColorHint">?attr/onSurfaceColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start|top</item>
        <item name="boxStrokeColor">@color/outline_color</item>
    </style>
    <!--TextAppearance.AppCompat-->

    <style name="Default_Label_font">
        <item name="android:textColorHint">?attr/onSurfaceColor</item>
        <item name="android:textColor">?attr/onSurfaceColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Default_Button_font">
        <item name="android:textColor">?attr/onSurfaceColor</item>
        <item name="android:textColorHint">?attr/onSurfaceColor</item>
        <item name="android:buttonTint">?attr/onSurfaceColor</item>
    </style>


    <style name="Default_TextView_font">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textColor">?attr/onSurfaceColor</item>
    </style>

    <style name="Component_background">
        <item name="android:background">?attr/surfaceColor</item>
    </style>

    <!-- Componet Autocomplete -->

    <style name="Autocomplete_label" parent="Default_Label_font">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Autocomplete_edittext" parent="Default_TextView_font">
        <item name="backgroundTint">@color/underline_color_selector</item>
        <item name="android:popupBackground">?attr/AppBackgroundColor</item>
    </style>

    <!-- Component TextField -->
    <style name="Textfield_label" parent="Default_Label_font">
    </style>

    <style name="Textfield_edittext" parent="Default_TextView_font">
        <item name="backgroundTint">@color/underline_color_selector</item>
    </style>

    <style name="Textfield_cancel_button">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="tint">?attr/onSurfaceColor</item>
    </style>

    <style name="Spinner_item" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="backgroundTint">?attr/onSurfaceColor</item>
    </style>


    <!-- Component Datatable -->

    <style name="Datatable_header_container">
        <item name="android:background">?attr/surface2Color</item>
    </style>

    <style name="Datatable_header_title">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">?attr/onSurface2Color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Datatable_header_filter">
        <item name="android:textColor">?attr/onSurfaceColor</item>
    </style>

    <style name="Datatable_header_filter_cancel">
        <item name="android:background">@drawable/selectableimagebackground</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Datatable_header_filter_order">
        <item name="android:background">@drawable/selectableimagebackground</item>
        <item name="android:contentDescription">@string/layer_aslist</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Component dialog -->
    <style name="DialogStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">?attr/primaryColorVariant</item>                   <!--header background-->
        <item name="android:windowBackground">?attr/surfaceColor</item>     <!--calendar background-->
        <item name="android:colorControlActivated">?attr/primaryColorVariant</item> <!--selected day-->
        <item name="android:textColorPrimary">?attr/onSurfaceColor</item> <!--days of the month-->
        <item name="android:textColorSecondary">?attr/primaryColorVariant</item>    <!--days of the week-->
    </style>

    <!-- Component tab -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">?attr/surfaceColor</item>
        <item name="tabIndicatorColor">?attr/primaryColorVariant</item>
        <item name="tabTextColor">?attr/onSurfaceColor</item>
    </style>

</resources>
