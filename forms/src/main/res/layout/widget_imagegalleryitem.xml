<?xml version="1.0" encoding="utf-8"?>
<es.jcyl.ita.formic.forms.components.image.ImageGalleryItemWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <es.jcyl.ita.formic.forms.components.image.ImageResourceView
        android:id="@+id/galleryitem_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/no_image"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:id="@+id/galleryitem_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:maxLines="1"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/white" />
</es.jcyl.ita.formic.forms.components.image.ImageGalleryItemWidget>