<?xml version="1.0" encoding="utf-8"?>
<es.jcyl.ita.formic.forms.view.widget.InputWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Text Label -->
        <TextView
            android:id="@+id/label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Autocomplete_label" />
        <ImageView
            android:id="@+id/field_layout_x"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            style="@style/Textfield_cancel_button"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selectablebuttonbackground"
            android:contentDescription="@string/tool_buttons_x"
            android:padding="5dp"
            android:src="@drawable/ic_tool_x" />
    </RelativeLayout>

    <es.jcyl.ita.formic.forms.components.autocomplete.AutoCompleteView
        android:id="@+id/input_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/Autocomplete_edittext"/>
</es.jcyl.ita.formic.forms.view.widget.InputWidget>




