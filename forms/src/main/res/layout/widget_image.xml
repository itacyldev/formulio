    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/label_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">
        <!-- Text Label -->
        <TextView
            android:id="@+id/label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:layout_weight="9.6"
            android:layout_marginRight="60dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_weight="0.4">
            <ImageView
                android:id="@+id/field_layout_info"
                style="@style/Textfield_info_button"
                android:layout_marginRight="2dp" />
            <ImageView
                android:id="@+id/field_layout_x"
                style="@style/Textfield_cancel_button"
                android:layout_marginRight="2dp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:layout_gravity="left|center_vertical"
            android:gravity="left"
            style="@style/Component_background"
            >
            <es.jcyl.ita.formic.forms.components.image.ImageResourceView
                android:id="@+id/input_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/no_image"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_sketch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="28dp"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_action_edit"
                android:drawableTint="?attr/onPrimaryColor"
                android:background="@drawable/roundbutton"
                />
            <Button
                android:id="@+id/btn_camera"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="28dp"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_action_camera"
                android:drawableTint="?attr/onPrimaryColor"
                android:background="@drawable/roundbutton"/>
            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="28dp"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_action_picture"
                android:drawableTint="?attr/onPrimaryColor"
                android:background="@drawable/roundbutton"
                android:visibility="invisible"
                />
        </LinearLayout>
    </LinearLayout>

</es.jcyl.ita.formic.forms.components.image.ImageWidget>