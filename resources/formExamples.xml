            </repo>
        </data>
        <edit fields="*">
            <!-- sobre cargamos la definici칩n de uno de los campos para utilizar un lookup en uno y un compo en otro-->
            <select repo="repo3" value="${entity.field1}" />
            <inputText lookup="repo3" readonly="true" value="${entity.field2}"></inputText>
            <autocomplete repo="repo3" value="${entity.field3}" />

            <lookup id="lookup1" repo="repo3">
                <datable>
                    <col value="${entity.f1}" />
                    <col value="${entity.f2} + ${entity.f3}" />
                </datable>
            </lookup>
        </edit>
    </form>

