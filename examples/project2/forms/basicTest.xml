<main name="basicForm" description="Basic CRUD" id="form5" repo="contacts">
    <list name="Basic Form">
        <datatable route="form5-edit1" />
    </list>
    <edit>
        <input value="edit1" />
        <form />
        <buttonbar type="bottom">
            <button action="nav" label="go-2" route="form5-edit2">
                <param name="entityId" value="${entity.id}" />
            </button>
            <button action="nav" label="back" route="back" />
        </buttonbar>
    </edit>
    <edit>
        <input value="edit2" />
        <form />
        <!-- guardamos y saltamos un paso atr치s-->
        <buttonbar type="bottom">
            <button action="save" label="save" route="back" />
            <button action="nav" label="back" route="back" />
            <button action="nav" label="go-3" route="form5-edit3">
                <param name="entityId" value="${entity.id}" />
            </button>
        </buttonbar>
    </edit>
    <edit>
        <input value="edit3" />
        <form />
        <!-- Guardamos y saltamos dos pasos atr치s. crear accion a parte para poder configurar
        registerInHistory y PopHistory. Evitar registro de la navegaci칩n y eliminar del historial
        edit2 y edit 1  en lugar de solo edit2 -->
        <buttonbar type="bottom">
            <button label="Save and Go-1">
                <action popHistory="2" registerInHistory="false" route="form5-edit1" type="save">
                    <param name="entityId" value="${entity.id}" />
                </action>
            </button>
            <button label="go-1">
                <action popHistory="2" registerInHistory="false" route="form5-edit1" type="nav">
                    <param name="entityId" value="${entity.id}" />
                </action>
            </button>
            <button label="go-4" route="form5-edit4" type="nav">
                <param name="entityId" value="${entity.id}" />
            </button>
        </buttonbar>
    </edit>
    <edit>
        <input value="edit4" />
        <form />
        <!-- Guardamos y saltamos tres pasos para atr치s utilizando el historial-->
        <buttonbar type="bottom">
            <button action="save" label="save go-1" route="back-3" />
            <button action="nav" label="back-1" route="back-3" />
        </buttonbar>
    </edit>
</main>
