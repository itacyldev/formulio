<main name="bodegas" description="Bodegas" id="bodegas" repo="bodegaRepo">
    <edit>
        <form>
            <tab>
                <tabitem label="1">
                    <text label="Id: " readonly="true" value="${entity.id}" />
                    <autocomplete forceSelection="true" id="provincia" label="Provincia: "
                        repo="provRepo" value="${entity.prov_id}">
                        <options labelExpression="${entity.name}" labelFilteringProperty="name"
                            valueProperty="id" />
                    </autocomplete>
                    <autocomplete forceSelection="true" id="provmuni" label="Municipio: "
                        repo="muniRepo" value="${entity.provmuni_id}">
                        <options labelExpression="${entity.name}" labelFilteringProperty="name"
                            valueProperty="provmuni" />
                        <repofilter>
                            <eq mandatory="true" property="prov" value="${view.provincia}" />
                            <contains property="name" value="${this.value}" />
                        </repofilter>
                    </autocomplete>
                </tabitem>
                <tabitem label="2">
                    <text label="Razón Social: " validator="required"
                        value="${entity.razon_social}" />
                    <text label="Dirección: " value="${entity.direccion}" />
                    <text label="Teléfono: " value="${entity.telefono}" />
                    <text label="Email: " validator="email" value="${entity.email}" />
                    <text label="Alc. Actual: " value="${entity.alcance_actual}" />
                    <text label="Alc. Solic.: " value="${entity.alcance_solicitado}" />
                </tabitem>
            </tab>
        </form>
    </edit>
</main>